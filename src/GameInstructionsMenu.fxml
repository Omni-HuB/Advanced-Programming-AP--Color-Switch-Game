<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.Cursor?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane prefHeight="650.0" prefWidth="500.0" style="-fx-background-image: url('file:./assets/background.png');" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GameInstructionsMenuController">
   <children>
       <ImageView fitHeight="650.0" fitWidth="500.0" layoutX="-1.0" pickOnBounds="true" preserveRatio="true">
           <image>
               <Image url="file:./assets/instructions.png" />
           </image>
       </ImageView>
        <Circle fx:id="MenuButton" fill="#555555" layoutX="60.0" layoutY="55.0" onMouseClicked="#onMenuButtonClick" radius="48.0" stroke="#555555" strokeType="INSIDE">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Circle>
        <Text fill="WHITE" layoutX="19.0" layoutY="66.0" onMouseClicked="#onMenuButtonClick" strokeType="OUTSIDE" strokeWidth="0.0" text="MENU">
            <font>
                <Font name="Blissful Thinking" size="36.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Text>
   </children>
</AnchorPane>
